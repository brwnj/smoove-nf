// Configurable variables
params {
    project = 'sites'
    sexchroms = 'X,Y'
    outdir = './results'
    exclude = "hs37d5,~:,~^GL,~MT,~M,~EBV,~^NC,~^hs37d5,~^phix,~decoy,~random\$,~chrUn,~_alt\$"
    // applies to covviz report
    zthreshold = 3.5
    distancethreshold = 150000
    slop = 500000
}

process {
    time = '12h'
    memory = 8.GB
    cpus = 1
    container = 'brentp/smoove:v0.2.3'
    cache = 'lenient'
    withName: smoove_call {
        memory = { 16.GB * task.attempt }
        // 'ignore' will remove a sample from continuing in the pipeline
        errorStrategy = { task.attempt < 3 ? 'retry' : 'ignore' }
    }
    withName: smoove_merge {
        memory = 16.GB
        cache = 'deep'
    }
    withName: smoove_genotype {
        memory = { 16.GB * task.attempt }
        // 'terminate' kills the workflow when a sample fails genotyping
        errorStrategy = { task.attempt < 3 ? 'retry' : 'finish' }
    }
    withName: smoove_square {
        memory = 64.GB
        cpus = 3
        cache = 'deep'
    }
    withName: run_indexcov {
        memory = 8.GB
        cache = 'deep'
    }
    withLabel: 'somalier' {
        container = 'brentp/somalier:v0.2.2'
        memory = { 4.GB * task.attempt }
        errorStrategy = { task.attempt < 3 ? 'retry' : 'finish' }
    }
}

process.shell = ['/bin/bash', '-euo', 'pipefail']

timeline {
    enabled = true
    file = "${params.outdir}/logs/timeline.html"
}
report {
    enabled = true
    file = "${params.outdir}/logs/report.html"
}
trace {
    enabled = true
    file = "${params.outdir}/logs/trace.txt"
}
dag {
    enabled = true
    file = "${params.outdir}/logs/dag.svg"
}

manifest {
    name = 'brwnj/smoove-nf'
    author = 'Joe Brown'
    description = "run smoove smoover and with additional QC packaged"
    version = '1.0.3'
    nextflowVersion = '>=0.32.0'
    homePage = 'https://github.com/brwnj/smoove-nf'
    mainScript = 'main.nf'
}
